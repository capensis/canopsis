[{
	"name":  "Stream",
	"version": 0.1,
	"author": "capensis",
	"website": "http://www.canopsis.org",
	"xtype": "stream",
	"description": "Display the live stream of events.",
	"description-fr":"Affiche un flux d'évènements en temps réel.",
	"refreshInterval": 60,
	"border" : true,
	"locales": ["fr"],
	"options": [{
			"title": "Options",
			"items": [
				{
					"xtype": "fieldset",
					"title": "Options",
					"collapsible": false,
					"items": [
						{
							"xtype" : "numberfield",
							"name" : "max",
							"fieldLabel": "Maximum events",
							"minValue": 1,
							"value": 20
					   },{
							"xtype" : "numberfield",
							"name" : "max_comment",
							"fieldLabel": "Maximum comments",
							"minValue": 1,
							"value": 5
					   },{
							"xtype": "checkboxfield",
							"fieldLabel": "Show toolbar",
							"inputValue": true,
							"uncheckedValue": false,
							"checked": true,
							"name": "showToolbar"
					   },{
							"xtype": "checkboxfield",
							"fieldLabel": "Compact display",
							"inputValue": true,
							"uncheckedValue": false,
							"checked": false,
							"name": "compact"
					   },{
							"xtype": "checkboxfield",
							"fieldLabel": "Enable user inputs",
							"inputValue": true,
							"uncheckedValue": false,
							"checked": true,
							"name": "enable_userinputs"
					   },{
							"xtype": "checkboxfield",
							"fieldLabel": "Enable user comments",
							"inputValue": true,
							"uncheckedValue": false,
							"checked": true,
							"name": "enable_comments"
					   }	
					]
				},{
					"xtype": "fieldset",
					"title": "Filter",
					"collapsible": false,
					"items": [
						{
							"xtype" : "textfield",
							"name" : "tags",
							"fieldLabel": "Tags (separated by space)",
							"allowBlank": true
					   },{
							"xtype": "checkboxfield",
							"fieldLabel": "Operator (Checked: AND otherwise OR)",
							"inputValue": true,
							"uncheckedValue": false,
							"checked": true,
							"name": "tags_op"
					   }	
					]
				}
			]
		}]
}]
