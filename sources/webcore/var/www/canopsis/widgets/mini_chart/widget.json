[{
	"name":  "Mini Chart",
	"version": 0.1,
	"author": "capensis",
	"website": "http://www.canopsis.org",
	"xtype":"mini_chart",
	"description": "Displays metrics on interactive  on a little customizable graph.",
	"description-fr":"Affiche des m√©triques sur un gpetit raphique interactif et personalisable.",
	"refreshInterval": 300,
	"locales": ["en", "fr"],
	"options": [{
			"title": "Options & Aggregation",
			"advanced": true,
			"items": [{
						"xtype": "cfieldset",
						"title": "Extra Options",
						"items": [{
							"xtype": "combobox",
							"name": "chart_type",
							"fieldLabel": "Chart Type",
							"queryMode": "local",
							"displayField": "text",
							"valueField": "value",
							"value": "line_graph",
							"store": {
								"xtype": "store",
								"fields": ["value", "text"],
								"data" : [
									{"value": "line_graph", "text": "Line Graph"},
									{"value": "column", "text": "Bar Graph"}
								]
							}

						},{
							"xtype": "checkbox",
							"fieldLabel": "Calcul Percent",
							"checked": false,
							"name": "SeriePercent"
						}]
				},{

						"xtype": "cfieldset",
						"title": "Time Window",
						"items": [
							{
								"xtype" : "cduration",
								"name" : "time_window",
								"fieldLabel": "Time window",
								"value": 86400
                           }]
				},{
				"xtype": "cfieldset",
				"title": "Aggregation",
				"items": [
				{
					"xtype": "combobox",
					"name": "aggregate_method",
					"fieldLabel": "Aggregation Method",
					"queryMode": "local",
					"displayField": "text",
					"valueField": "value",
					"value": "MEAN",
					"store": {
						"xtype": "store",
						"fields": ["value", "text"],
						"data" : [
							{"value": "", "text": "None"},
							{"value": "MAX", "text": "Max"},
							{"value": "MIN", "text": "Min"},
							{"value": "LAST", "text": "Last"},
							{"value": "FIRST", "text": "First"},
							{"value": "DELTA", "text": "Delta"},
							{"value": "MEAN", "text": "Mean"},
							{"value": "SUM", "text": "Sum"}
						]
					}
				},{
					"xtype" : "numberfield",
					"name" : "aggregate_max_points",
					"fieldLabel": "Max points (if no interval)",
					"minValue": 2,
					"value": 500
                   		},{
					"xtype": "combobox",
					"name": "aggregate_interval",
					"fieldLabel": "Aggregation Interval",
					"queryMode": "local",
					"displayField": "text",
					"valueField": "value",
					"value": 0,
					"store": {
						"xtype": "store",
						"fields": ["value", "text"],
						"data" : [
							{"value": 0, "text": "None"},
							{"value": 900, "text": "15 minutes"},
							{"value": 1800, "text": "30 minutes"},
							{"value": 3600, "text": "1 hour"},
							{"value": 86400, "text": "1 day"},
							{"value": 604800, "text": "1 week"},
							{"value": 2629800, "text": "1 month"},
							{"value": 31557600, "text": "1 year"}
						]
					}
				}
			]
		}]
	},{
	"title": "Choose Metrics",
	"items": [{					
		"xtype": "cmetric",
		"name": "nodes",
		"multiSelect": true,
		"metrics": true,
		"sharedStore":"line_graph"
	}]
	},{
			"title": "customize metrics",
			"items": [{
						"xtype": "ccustom",
						"sharedStore":"line_graph",
						"customForm": [{
											"xtype":"textfield",
											"fieldLabel":"Custom label",
											"name":"label",
											"emptyText":"Type the new label here"
										},{
											"xtype" : "ccolorfield",
											"name" : "curve_color",
											"fieldLabel": "Curve color",
											"replaceWhiteColor":true
										},{
											"xtype" : "ccolorfield",
											"name" : "area_color",
											"fieldLabel": "Area color",
											"replaceWhiteColor":true
										},{
											"xtype":"combobox",
											"fieldLabel":"Printed Value",
											"name": "printed_value",
											"queryMode": "local",
											"displayField": "text",
											"valueField": "value",
											"store": {
												"xtype": "store",
												"fields": ["value", "text"],
												"data" : [
													{"value": "last_value", "text": "Last Value"},
													{"value": "trend", "text": "Evolution"}
												]
											}
										},{
											"xtype":"textfield",
											"fieldLabel":"Unit",
											"name":"u"
										},{
											"xtype": "cfieldset",
											"title": "Customize Trends' Style",
											"items": [
											{
												"xtype": "checkbox",
												"fieldLabel": "Display in pct",
												"checked": true,
												"name": "display_pct"
											},{
												"xtype" : "ccolorfield",
												"name" : "colorLow",
												"fieldLabel": "Low color",
												"value": "#1BE01B"
											},{
												"xtype" : "ccolorfield",
												"name" : "colorMid",
												"fieldLabel": "Middle color",
												"value": "#E0E0E0"
											},{
												"xtype" : "ccolorfield",
												"name" : "colorHight",
												"fieldLabel": "Hight color",
												"value": "#E0251B"
											}
										]

										}]
			}]
	}]

}]

