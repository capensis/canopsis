{
	"type": "object",
	"metadata": {
		"icon": "fa fa-envelope"
	},
	"categories": [{
		"title": "General",
		"keys": ["subject", "body", "recipients", "html"]
	},{
		"title": "SMTP",
		"keys": ["smtp_host", "smtp_port", "smtp_auth_on", "smtp_user", "smtp_pass", "tls_on"]
	},{
		"title": "User Informations",
		"keys": ["user", "group", "sender"]
	}],
	"properties": {
		"user": {"type": "string", "required": true, "role": "session", "valueFrom": "username"},
		"group": {"type": "string", "required": true, "role": "session", "valueFrom": "group"},
		"sender": {"type": "string", "required": true, "role": "session", "valueFrom": "mail"},
		"recipients": {
			"type": "array",
			"items": {
				"type": "string",
				"required": true
			},
			"minItems": 1
		},
		"subject": {"type": "string", "required": true},
		"body": {"type": "string", "role": "textarea", "required": true},
		"attachments": {
			"description": "disabled until a file-upload editor is available",
			"type": "array",
			"items": {"type": "string"},
			"required": true,
			"default": []
		},
		"smtp_host": {"type": "string", "required": true, "default": "localhost"},
		"smtp_port": {"type": "integer", "required": true, "default": 25},
		"smtp_auth_on": {"type": "boolean", "required": true, "default": false},
		"tls_on": {"type": "boolean", "required": true, "default": false},
		"smtp_user": {"type": "string", "required": false},
		"smtp_pass": {"type": "string", "required": false, "role": "password"},
		"html": {"type": "boolean", "required": true, "default": false}
	}
}
