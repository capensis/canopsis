			"type": "string",
			"required": true
		},
		"crecord_type": {
			"enum": ["event"],
			"required": false,
			"default": "event",
			"icon": "flag"
		},
		"ack": {
			"type": "object",
			"role": "ack",
			"properties": {
				"isAck": {
					"type" : "boolean"
				}
			}
		},
		"ack_remove": {
			"type": "object"
