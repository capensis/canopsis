			"type": "string",
			"required": true,
			"role": "source"
		},
		"connector_name": {
			"type": "string",
			"required": true
		},
		"output": {
			"role": "richtext",
			"type": "string",
			"required": true,
			"description": "output of the event",
			"title": "Output"
		},
		"state": {
			"type": "number",
			"required": false,
			"role": "criticity",
			"properties": {
				"val": {
					"type" : "number"
				}
			}
		},
		"state_type": {
			"type": "number"
		},
		"perimeter": {
			"type": "string"
		},
		"domain": {
			"type": "string"
		},
		"status": {
			"type": "number",
			"role": "status",
			"properties": {
				"val": {
					"type" : "number"
				}
			}
		},
		"cancel": {
			"type": "object",
			"role": "object"
		},
		"author": {
			"type": "string"
		},
		"entity_id": {
			"type": "string"
		}
