				},
				"component": {
					"type":"string",
					"title": "Component"
				},
				"resource": {
					"type": "string",
					"title": "Resource"
				},
				"ack": {
					"type": "object",
					"title": "Alarm ack",
					"properties": {
						"t": {
							"type": "integer",
							"role": "eventtimestamp",
							"canDisplayAgo" : true,
							"title": "Date ACK"
						}
					}
				},
				"snooze": {
					"type": "object",
					"properties": {
						"t": {
							"type": "integer",
							"role": "eventtimestamp",
							"canDisplayAgo" : true,
							"title": "Date Snooze"
						}
					}
				},
				"ticket": {
					"type": "object",
					"properties": {
						"t": {
							"type": "integer",
							"role": "eventtimestamp",
							"canDisplayAgo" : true,
							"title": "Date Ticket"
						}
					}
				},
				"canceled": {
					"type": "object"
				},
				"resolved": {
					"type": "integer",
