			"type": "integer",
			"role": "eventtimestamp",
			"canDisplayAgo" : true,
			"title": "last state change"

		},
		"tags": {
			"type": "array",
			"items": {
				"type": "string"
			},
			"role" : "tags"
		},
		"ticket_date": {
			"type": "number"
		},
		"keep_state": {
			"type": "boolean"
