					"canDisplayAgo" : true
				},
				"state": {
					"type": "object",
					"required": false,
					"role": "criticity",
					"properties": {
						"val": {
							"type" : "number"
						}
					}
				},
				"status": {
					"type": "number",
					"required": false,
					"role": "criticity",
					"properties": {
						"v": {
							"type" : "number"
						}
