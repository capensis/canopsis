{
	"type": "object",
	"categories": [{
		"title": "Source",
		"keys":["connector", "connector_name"]
	},{
		"title": "Entities",
		"keys":["component", "resource", "domain", "perimeter"]
	},{
		"title": "Event",
		"keys":["event_type", "status.val", "state.val", "ack.isAck"]
	},{
		"title": "Event filter",
		"keys":["state", "state_type"]
	}],
	"showEditButton": true,
	"properties": {
		"hostgroups": {
			"type": "array",
			"items": {
				"type": "string"
			},
			"role" : "tags"
		},
		"change_state_output": {
			"type": "string"
		},
		"event_type": {
			"type": "string",
			"required": true,
			"role": "eventtype"
		},
		"source_type": {
			"type": "string",
			"required": true
		},
		"crecord_type": {
			"enum": ["event"],
			"required": false,
			"default": "event",
			"icon": "flag"
		},
		"ack": {
			"type": "object",
			"role": "ack",
			"properties": {
				"isAck": {
					"type" : "boolean"
				}
			}
		},
		"ack_remove": {
			"type": "object"
		},
		"ticket_declared_author": {
			"type": "string"
		},
		"ticket_declared_date": {
			"type": "number"
		},
		"ticket": {
			"type": "string",
			"title":"ticket"
		},
		"last_state_change": {
			"type": "integer",
			"role": "eventtimestamp",
			"canDisplayAgo" : true,
			"title": "last state change"

		},
		"tags": {
			"type": "array",
			"items": {
				"type": "string"
			},
			"role" : "tags"
		},
		"ticket_date": {
			"type": "number"
		},
		"keep_state": {
			"type": "boolean"
		},
		"timestamp": {
			"type": "number",
			"role": "timestamp",
			"canDisplayAgo" : true
		},
		"component": {
			"type": "string",
			"required": true
		},
		"component_alias": {
			"type": "string",
			"required": false
		},
		"resource": {
			"type": "string",
			"required": false,
			"readOnly": true
		},
		"connector": {
			"type": "string",
			"required": true,
			"role": "source"
		},
		"connector_name": {
			"type": "string",
			"required": true
		},
		"output": {
			"role": "richtext",
			"type": "string",
			"required": true,
			"description": "output of the event",
			"title": "Output"
		},
		"state": {
			"type": "number",
			"required": false,
			"role": "criticity",
			"properties": {
				"val": {
					"type" : "number"
				}
			}
		},
		"state_type": {
			"type": "number"
		},
		"perimeter": {
			"type": "string"
		},
		"domain": {
			"type": "string"
		},
		"status": {
			"type": "number",
			"role": "status",
			"properties": {
				"val": {
					"type" : "number"
				}
			}
		},
		"cancel": {
			"type": "object",
			"role": "object"
		},
		"author": {
			"type": "string"
		},
		"entity_id": {
			"type": "string"
		}
	}
}
