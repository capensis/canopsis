NAME="nodejs"

function install() {
    BASE="node-v$VERSION-$ARCH"
    if [ ! -f ${PREFIX}/bin/npm ]; then
        if [ ! "$(${PREFIX}/bin/node -v)" = "v${VERSION}" ]; then
            tar xf externals/$BASE.tar.xz --strip-components 1 -C $PREFIX
            check_code $?
        fi
    fi
}

function update() {
    install
}
