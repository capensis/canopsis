        "label_display": {
            "title" : "Diplay Label",
            "type": "boolean"
        },
        "label_width":  {
            "type": "number",
            "title" : "Label Width"
        },
        "label_unit":  {
            "title" : "Label Width Unit",
            "role": "simplelist",
            "enum": ["%", "px", "em"],
            "default": "%"
