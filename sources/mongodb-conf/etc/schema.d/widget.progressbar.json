            "role": "arrayclassifiedcrecordselector",
            "model": "serie",
			"crecordtype": "serie",
			"multiselect": true
        },
        "metrics": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "role": "cmetric",
            "title": "Metrics"
        },
        "mixins": {
            "type": "array",
            "role": "mixins",
            "items": {
                "type": "string"
            },
            "reorderable": true
