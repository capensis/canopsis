        "show_value": {
            "title": "Show Value",
            "type": "boolean"
        },
        "pb_thickness": {
            "type": "number",
            "title" : "Thickness (px)"
        },
        "gg_width": {
            "type": "number",
            "title" : "Gauge Dimension (px)"
        },
        "gg_thickness": {
            "type": "number",
            "title" : "Thickness (px)"
        },
        "gg_fill": {
            "type": "string",
            "role": "color",
            "title": "Fill Gauge",
            "default": "#ffffff"
        },
        "gg_border": {
            "type": "string",
            "role": "color",
            "title": "Border Gauge",
            "default": "#cccccc"
        },
        "value_color": {
            "type": "string",
            "role": "color",
            "title": "Value Color",
            "default": "#000000"
