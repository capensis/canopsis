[{
	"name":  "Perf. Top",
	"version": 0.1,
	"author": "capensis",
	"website": "http://www.canopsis.org",
	"xtype": "perftop",
	"description": "Display list of metrics sorted by value",
	"description-fr":"Affiche une liste de metriques triÃ©e par valeur.",
	"refreshInterval": 300,
	"border": true,
	"locales": ["fr"],
	"options": [{
		"title": "Options",
		"advanced": true,
		"items": [
			{
				"xtype": "cfieldset",
				"title": "General",
				"items": [
					{
						"xtype" : "numberfield",
						"name" : "limit",
						"fieldLabel": "Limit",
						"minValue": 1,
						"value": 10
					},{
						"xtype" : "numberfield",
						"name" : "threshold",
						"fieldLabel": "Threshold"
					},{
						"xtype": "combobox",
						"name": "threshold_direction",
						"fieldLabel": "Threshold direction",
						"queryMode": "local",
						"displayField": "text",
						"valueField": "value",
						"value": -1,
						"store": {
							"xtype": "store",
							"fields": ["value", "text"],
							"data" : [
								{"value": -1, "text": ">="},
								{"value": 1, "text": "<="}
							]
						}
					},{
						"xtype": "checkbox",
						"fieldLabel": "Compare threshold on pct and not value",
						"checked": false,
						"name": "threshold_on_pct"
					},{
						"xtype": "checkbox",
						"fieldLabel": "Expand values (only first metric will be selected)",
						"checked": false,
						"name": "expand"
					},{
						"xtype": "combobox",
						"name": "sort",
						"fieldLabel": "Default direction",
						"queryMode": "local",
						"displayField": "text",
						"valueField": "value",
						"value": -1,
						"store": {
							"xtype": "store",
							"fields": ["value", "text"],
							"data" : [
								{"value": -1, "text": "Descending"},
								{"value": 1, "text": "Ascending"}
							]
						}
					},{
						"xtype": "checkbox",
						"fieldLabel": "Hide headers",
						"checked": false,
						"name": "hideHeaders"
					}
				]
			},{
				"xtype": "cfieldset",
				"title": "Columns",
				"items": [
					{
						"xtype": "checkbox",
						"boxLabel": "Position",
						"checked": true,
						"name": "show_position"
					},{
						"xtype": "checkbox",
						"boxLabel": "Icon",
						"checked": true,
						"name": "show_source_type"
					},{
						"xtype": "checkbox",
						"boxLabel": "Component",
						"checked": true,
						"name": "show_component"
					},{
						"xtype": "checkbox",
						"boxLabel": "Resource",
						"checked": true,
						"name": "show_resource"
					},{
						"xtype": "checkbox",
						"boxLabel": "Metric",
						"checked": true,
						"name": "show_metric"
					},{
						"xtype": "checkbox",
						"boxLabel": "Human-readable value",
						"checked": true,
						"name": "show_hr_value"
					},{
						"xtype": "checkbox",
						"boxLabel": "Value",
						"checked": false,
						"name": "show_value"
					},{
						"xtype": "checkbox",
						"boxLabel": "Percent (if possible)",
						"checked": false,
						"name": "show_percent"
					},{
						"xtype": "checkbox",
						"boxLabel": "Unit",
						"checked": false,
						"name": "show_unit"
					},{
						"xtype": "checkbox",
						"boxLabel": "Last time",
						"checked": false,
						"name": "show_last_time"
					}]
				}
		]
	},{
		"title": "Filter",
		"items": [{
			"xtype": "cfilter",
			"name": "mfilter",
			"url": "/perfstore",
			"model": "canopsis.model.Perfdata",
			"params": {"show_internals": true},
			"operator_fields": [
				{"operator": "co",	"text": "Component",	"type": "all" },
				{"operator": "re",	"text": "Resource",		"type": "all" },
				{"operator": "me",	"text": "Metric",		"type": "all" },
				{"operator": "t",	"text": "Type",			"type": "all" },
				{"operator": "tg",	"text": "Tags",			"type": "all" }
			],
			"columns": [
				{
					"header": "Component",
					"sortable": false,
					"dataIndex": "co",
					"flex": 1
		   		},{
		   			"header": "Resource",
					"sortable": false,
					"dataIndex": "re",
					"flex": 1
		 		},{
		   			"header": "Metric",
					"sortable": false,
					"dataIndex": "me",
					"flex": 1
		 		}
		 	]
		}]
	}]
}]
