<div class="row" style="background-color: #f5f5f5;">
  <div class="col-md-12">
    <!-- The time line -->
    <ul class="timeline">

      {{#each steps as |step|}}
        <li class="time-label">
          <span class="bg-red">
            {{step.date}} {{step.time}}
          </span>
        </li>
        <!-- /.timeline-label -->
        <!-- timeline item -->
        <li>
          <i {{bind-attr class=":fa step.icon step.color"}}></i>

          <div class="timeline-item">
            <span class="time"><i class="fa fa-clock-o"></i> {{step.time}}</span>

            <h3 class="timeline-header"><a href="#">{{step.a}}</a>    {{step._t}}</h3>

            <div class="timeline-body">
              {{step.m}}
            </div>
{{!--             <div class="timeline-footer">
              <a class="btn btn-primary btn-xs">Read more</a>
              <a class="btn btn-danger btn-xs">Delete</a>
            </div> --}}
          </div>
        </li>
        <!-- END timeline item -->
      {{/each}}
     
      <li>
        <i class="fa fa-clock-o bg-gray"></i>
      </li>
    </ul>
  </div>
  <!-- /.col -->
</div>